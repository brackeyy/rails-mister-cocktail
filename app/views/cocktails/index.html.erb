

<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://images.pexels.com/photos/3323682/pexels-photo-3323682.jpeg?auto=compress&cs=tinysrgb&dpr=2&h=750&w=1260);">
    <h1>Welcome to <strong>Mr Cocktail</strong></h1>
    <p> Get shitfaced and more</p>
    <p> <%= link_to "Add a cocktail", new_cocktail_path, class: 'btn btn-primary'%></p>
</div>

<div class="headline">
  <h3>All cocktails:</h3>
</div>

<div class="container">

  <div class="row">

    <% @cocktails.each do |cocktail| %>
      <div class="col-sm-6">
        <% if cocktail.photo.attached? %>

          <div class="cocktail-card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path cocktail.photo.key %>');">
            <h4> <%= cocktail.name%> <%= link_to "Edit", cocktail_path(cocktail), method: :get, class: 'btn-sm btn-primary'%> </h4>
            <h4>_________________ </h4>
            <p><strong>Recipe:</strong></p>
            <% cocktail.doses.each do |d| %>
              <p> -> <%= d.ingredient.name %> ~ <%= d.description %> </p>
            <% end %>
            <%= link_to 'Delete', cocktail, method: :delete, class: 'btn-sm btn-danger' %>
          </div>

        <% else %>

          <div class="cocktail-card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(https://source.unsplash.com/random);">
            <h4><strong>Cocktail:</strong> </h4>
            <h4> <%= cocktail.name%> <%= link_to "Edit", cocktail_path(cocktail), method: :get, class: 'btn-sm btn-primary'%> </h4>
            <h4>_________________ </h4>
            <p><strong>Recipe:</strong></p>
            <% cocktail.doses.each do |d| %>
              <p> -> <%= d.ingredient.name %> ~ <%= d.description %> </p>
            <% end %>
            <%= link_to 'Delete', cocktail, method: :delete, class: 'btn-sm btn-danger' %>
          </div>

        <% end %>


      </div>
    <% end %>

   </div>
</div>
