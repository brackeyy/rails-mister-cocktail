
<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://images.pexels.com/photos/3323682/pexels-photo-3323682.jpeg?auto=compress&cs=tinysrgb&dpr=2&h=750&w=1260);">
  <h1><%= @cocktail.name %></h1>
  <br>
  <p> <%= link_to "Add dose", new_cocktail_dose_path(@cocktail), class: 'btn btn-primary'%></p>
</div>

<div class="headline">
  <%= link_to "Back", root_path, class: "btn-sm btn-primary" %>
  <br>
  <h3>Here is the cocktail:</h3>
</div>

<div class="container">

  <div class="row">
    <div class="col-sm">

      <div class="cocktail">
        <p><strong>Cocktail:</strong> <%= @cocktail.name %> </p>
        <p> <%= cl_image_tag "v1ycblybxauumc7dwwk5wgupp2ix", height: 300, width: 400, crop: :fill %></p>
        <p><strong>Recipe:</strong></p>
        <% @cocktail.doses.each do |d| %>
          <p> -> <%= d.ingredient.name %> ~ <em>Amount:</em> <%= d.description %> <%= link_to 'Delete', d, method: :delete, class: 'btn-sm btn-danger' %> </p>
        <% end %>
      </div>

    </div>
  </div>

</div>
